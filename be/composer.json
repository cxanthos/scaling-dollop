{
  "require": {
    "league/route": "^6",
    "vlucas/phpdotenv": "^5.4",
    "league/container": "^4",
    "laminas/laminas-diactoros": "^3.0",
    "laminas/laminas-httphandlerrunner": "^2.5",
    "robmorgan/phinx": "^0.16",
    "firebase/php-jwt": "^6.11",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2",
    "phpunit/phpunit": "^12",
    "friendsofphp/php-cs-fixer": "^3.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/php-cs-fixer --allow-risky=yes --diff",

    "check:style": "@phpcs --verbose check",
    "check:static": "vendor/bin/phpstan --memory-limit=256M analyse",
    "check:tests": "vendor/bin/phpunit",
    "fix:style": "@phpcs fix",

    "check:all": [
      "@check:style",
      "@check:static",
      "@check:tests"
    ],

    "db:migrate": "vendor/bin/phinx migrate",
    "db:seed": "vendor/bin/phinx seed:run",
    "db:create-migration": "vendor/bin/phinx create",
    "db:create-seed": "vendor/bin/phinx seed:create"
  }
}
